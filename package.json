    "@transia/hooks-toolkit": "2.0.0-alpha.2",
    "@transia/xahau-models": "2.7.3-alpha.29",
    "@transia/xrpl": "2.7.3-alpha.28",
    "dotenv": "^16.4.1",
    "jshooks-api": "^1.0.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@transia/ripple-binary-codec": "1.4.6-alpha.10",
    "@tsconfig/node18": "^18.2.2",
    "@types/node": "^20.14.5",
    "esbuild": "^0.23.0",
    "js2wasm-cli": "^1.0.4",
    "lefthook": "^1.6.16",
